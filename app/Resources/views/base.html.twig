                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        {% endblock nav %}

        {#{% block menu %}#}
            {#{{ knp_menu_render('LokosShopBundle:Builder:mainMenu', {'template': 'LokosShopBundle:Menu:main2.html.twig'}) }}#}
        {#{% endblock menu %}#}

        <div class="container main">
            <!-- Navbar End -->
            <div class="row">
                {% block content %}
                    {% block categories %}
                        <div class="col-md-3">
                            <p class="lead">Shop Name</p>
                            {% if categories  is defined %}
                                {% for category in categories %}
                                    <a class="list-group-item" href="{{ path('lokos_shop_overview', {'id':category.id}) }}">{{ category.name }}</a>
                                {% endfor %}
                            {% endif %}
                        </div>
                    {% endblock categories %}
                    {% block cart %}
                        <div class="cart">
                            <h3><a href="{{ path("lokos_shop_cart") }}">Cart</a></h3>
                            <span>Total items</span>: <p class="cart-items-count">{{ cartResume.total_quantity }}</p>
                            <span>Total price</span>: <p class="cart-items-price">$ {{ cartResume.total_price }}</p>
                        </div>
                    {% endblock cart %}

                {% endblock content %}
            </div>
        </div>
        {% block footer %}
            <div class="container">
                <hr>
                <!-- Footer -->
                <footer>
                    <div class="row">
                        <div class="col-lg-12">
                            <p>Copyright &copy; Your Website 2016</p>
                        </div>
                    </div>
                </footer>
            </div>
        {% endblock footer %}
        {% block javascripts %}
            {% javascripts
            '@LokosShopBundle/Resources/public/js/main.js'
            %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>