<!DOCTYPE html>
<html>
<head>
    {% block styles %}
        {% stylesheets
        '@bootstrap_css'
        '@LokosShopBundle/Resources/public/css/chosen.css'
        '@LokosShopBundle/Resources/public/css/style.css'
        %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
        {% endstylesheets %}
    {% endblock styles %}

    {% block head_styles %}{% endblock head_styles %}

    {% block head_scripts %}
        {% javascripts
        '@LokosShopBundle/Resources/public/js/jquery-2.1.4.js'
        '@bootstrap_js'
        '@LokosShopBundle/Resources/public/js/lodash.js'
        '@LokosShopBundle/Resources/public/js/chosen.jquery.js'
        '@LokosShopBundle/Resources/public/js/ajaxForm.js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script src="/ckeditor/ckeditor.js"></script>
    {% endblock head_scripts %}

    {% block page_script %}{% endblock page_script %}

</head>
<body>
{% block ajax_field_error_block %}
    <div class="hidden" id="ajaxFieldErrorTemplate">
        <span class="tm-help-block">{message}</span>
    </div>
{% endblock ajax_field_error_block %}
<div class="container">
    <nav class="navbar navbar-light bg-faded">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ url('lokos_shop_admin_categories') }}">Categories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('lokos_shop_admin_options') }}">Options</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('lokos_shop_admin_products') }}">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('lokos_shop_admin_brands') }}">Brands</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('lokos_shop_admin_attributes') }}">Attributes</a>
            </li>
        </ul>
    </nav>
</div>


<div class="container">
    <div class="row">
        {% block content %}
        {% endblock content  %}
    </div>
</div>
{% block javascripts %}
    {% javascripts
    '@LokosShopBundle/Resources/public/js/main.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block bottom_script %}
{% endblock bottom_script %}
</body>
</html>