<!DOCTYPE html>
<html>
<head>
    {% block styles %}
        {% stylesheets
        '@bootstrap_css'
        %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
        {% endstylesheets %}
    {% endblock styles %}

    {% block head_styles %}{% endblock head_styles %}

    {% block head_scripts %}
        {% javascripts
        '@LokosShopBundle/Resources/public/js/jquery-2.1.4.js'
        '@bootstrap_js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock head_scripts %}

    {% block page_script %}{% endblock page_script %}

</head>
<body>

<div class="container">
    <nav class="navbar navbar-light bg-faded">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ url('lokos_shop_admin_categories') }}">Categories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('lokos_shop_admin_options') }}">Options</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('lokos_shop_admin_products') }}">Products</a>
            </li>
        </ul>
    </nav>
</div>





{% block content %}
{% endblock content  %}

{% block bottom_script %}
    <script>
        $('.chosen-select').chosen();
    </script>
{% endblock bottom_script %}
</body>
</html>